<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/heading_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/header"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ic_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_akun" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txt_uname_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ic_akun"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txt_email_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_uname_akun"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abc@email.com"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txt_alamat_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_email_akun"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txt_rect_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_alamat_akun"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/rectangle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_akun_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_rect_akun"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/colorYellow"
            android:text="Logout"
            android:textColor="@color/colorNav" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txt_sett_akun"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/txt_rect_akun"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp">
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:text="Setting"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrowakun"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txt_about_akun"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txt_sett_akun">
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:text="About"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrowakun"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txt_about_akun">
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:text="About"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrowakun"/>
    </LinearLayout>
</RelativeLayout>