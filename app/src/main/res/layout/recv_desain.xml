<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/menu"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="29dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ramen"/>

    <TextView
        android:id="@+id/text_item"
        android:layout_width="210dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@+id/image_item"
        android:textColor="@color/colorPrimaryDark"
        tools:text="Nama Menu"/>

    <ScrollView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorTop"
                android:textSize="6pt"
                tools:text="desk"
                />
        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/buttonMinMenu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="259dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPlus"
        android:text="-"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/buttonPlusMenu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="313dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorPlus"
        android:text="+"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="92dp"
        android:layout_toEndOf="@+id/image_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="Rp."
            android:textColor="@color/colorNav"
            android:textSize="6pt"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNav"
            android:textSize="6pt"
            tools:text="28000"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textQtyMenu"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="286dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorBackground"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/colorNav" />


</RelativeLayout>