<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    >
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/text_item"
        android:layout_width="210dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/image_item"/>

    <TextView
        android:id="@+id/text_item2"
        android:layout_width="80pt"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBackground"
        android:textSize="6pt"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="259dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPlus"
        android:text="-"
        android:textColor="@color/colorWhite"
        android:textSize="6pt"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPlus"
        android:text="+"
        android:textColor="@color/colorWhite"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorNav"
        android:textSize="6pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toEndOf="@+id/image_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="283dp"
        android:layout_marginTop="73dp"
        android:background="@color/colorBackground"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/colorNav"/>


</RelativeLayout>