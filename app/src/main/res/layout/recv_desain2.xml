<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/img_card_rek"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ramen"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/txt_card_title"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Menu"
                android:layout_below="@+id/img_card_rek"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/txt_card_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_title"
                android:text="Rp."
                android:layout_marginStart="8dp"
                android:textColor="@color/colorNav"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/txt_card_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_title"
                android:layout_toRightOf="@+id/txt_card_rp"
                android:text="28000"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorNav"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <Button
                android:layout_below="@+id/txt_card_harga"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:text="Pesan"
                android:textSize="8sp"
                android:background="@color/colorNav"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>