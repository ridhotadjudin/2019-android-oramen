<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_card_rek"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ramen"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/txt_card_title"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Menu"
                android:layout_below="@+id/img_card_rek"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txt_card_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_title"
                android:text="Rp."
                android:layout_marginStart="8dp"
                android:textColor="@color/colorNav"
                android:textStyle="bold"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txt_card_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_title"
                android:layout_toRightOf="@+id/txt_card_rp"
                android:text="28000"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorNav"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/txt_card_harga"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorNav"
                android:text="Pesan"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>